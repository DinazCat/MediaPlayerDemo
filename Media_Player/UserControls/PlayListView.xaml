<UserControl x:Class="Media_Player.UserControls.PlayListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Media_Player.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel Background="#000020">
            <Grid DockPanel.Dock="Top">
                <Image Height="200" Stretch="UniformToFill" Name="imgScan" DataContext="{Binding}" Source="{Binding Path=prescanImage}"></Image>
                <TextBlock VerticalAlignment="Bottom" Margin="8" x:Name="txtName" Foreground="White" FontSize="40" FontWeight="Heavy"></TextBlock>
            </Grid>
            <ScrollViewer Background="#000044" >
                <ListView x:Name="ListNhac">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="500"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" Width="130" Height="130"  Source="{Binding linkanh}"></Image>


                                <StackPanel Grid.Column="1" Margin="20,5,5,5" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding songName}" Foreground="White" FontSize="16" FontWeight="Medium"/>

                                    <TextBlock Text="{Binding singerName}" Foreground="Gray" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                                <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Margin="300,0,0,0">
                                    <Button  Height="10" Width="10" Click="Button_Click" >
                                        <Button.Template>
                                            <ControlTemplate>
                                                <Canvas>
                                                    <Image Source="{Binding Linkicon}"/>
                                                </Canvas>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                                <!--<Grid HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                                    <TextBlock Text="{Binding Duration}" FontWeight="Medium" Foreground="Gray"></TextBlock>
                                </Grid>-->
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
